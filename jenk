pipeline {
    agent any
    environment{
        docker_hub_creds=credentials('docker_creds')

    }
    stages {
        stage('clone the repository'){
            steps {
                git branch: 'master', url: 'https://github.com/arijzaidi/TP2_devops.git'
            }
        }
        stage('build docker image'){
            steps {
                dir('SpringApp') {
                    echo 'building the docker image'
                    sh 'docker build -t spring_app .'
            }
        }

        stage('tag the docker image'){
            steps {
                sh 'docker tag spring_app:latest userdocker214/spring_app:latest'
            }
        }
        stage('push the docker image to the dockerhub'){
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker_creds', usernameVariable: 'docker_creds_USR', passwordVariable: 'docker_creds_PASS')]) {
                    sh 'docker login -u $docker_creds_USER --password-stdin'
                    sh 'docker push userdocker214/spring_app:latest'
                }
        }
    }
}
}
}